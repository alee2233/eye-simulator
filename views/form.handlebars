<h1>Eye Simulator</h1>

<form method="GET" action="/eye">
  <fieldset>
    <legend>Left Eye:</legend>
    <div>
      <input type="checkbox" id="leftSupRec" name="lsr" value="1" checked>
      <label for="leftSupRec">Superior Rectus</label>
    </div>
    <div>
      <input type="checkbox" id="leftInfRec" name="lir" value="1" checked>
      <label for="leftInfRec">Inferior Rectus</label>
    </div>
    <div>
      <input type="checkbox" id="leftLatRec" name="llr" value="1" checked>
      <label for="leftLatRec">Lateral Rectus</label>
    </div>
    <div>
      <input type="checkbox" id="leftMedRec" name="lmr" value="1" checked>
      <label for="leftMedRec">Medial Rectus</label>
    </div>
    <div>
      <input type="checkbox" id="leftSupObl" name="lso" value="1" checked>
      <label for="leftSupObl">Superior Oblique</label>
    </div>
    <div>
      <input type="checkbox" id="leftInfObl" name="lio" value="1" checked>
      <label for="leftInfObl">Inferior Oblique</label>
    </div>
  </fieldset>

  <fieldset>
    <legend>Right Eye:</legend>
    <div>
      <input type="checkbox" id="rightSupRec" name="rsr" value="1" checked>
      <label for="rightSupRec">Superior Rectus</label>
    </div>
    <div>
      <input type="checkbox" id="rightInfRec" name="rir" value="1" checked>
      <label for="rightInfRec">Inferior Rectus</label>
    </div>
    <div>
      <input type="checkbox" id="rightLatRec" name="rlr" value="1" checked>
      <label for="rightLatRec">Lateral Rectus</label>
    </div>
    <div>
      <input type="checkbox" id="rightMedRec" name="rmr" value="1" checked>
      <label for="rightMedRec">Medial Rectus</label>
    </div>
    <div>
      <input type="checkbox" id="rightSupObl" name="rso" value="1" checked>
      <label for="rightSupObl">Superior Oblique</label>
    </div>
    <div>
      <input type="checkbox" id="rightInfObl" name="rio" value="1" checked>
      <label for="rightInfObl">Inferior Oblique</label>
    </div>
  </fieldset>
  <div>
    <button type="submit">Select</button>
  </div>
</form>
